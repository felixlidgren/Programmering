        <Label Content="Utfall" HorizontalAlignment="Left" Margin="203,267,0,0" VerticalAlignment="Top" Width="93" FontWeight="Bold" FontSize="15"/>
        <Label x:Name="lblRightWay" Content="Antal rätt" HorizontalAlignment="Left" Margin="202,303,0,0" VerticalAlignment="Top" Width="211" Height="42"/>
        <Label x:Name="lblWrongWay" Content="Antal fel" HorizontalAlignment="Left" Margin="203,350,0,0" VerticalAlignment="Top" Width="211" Height="42"/>
        <Label x:Name="lblValue" Content="50 %" HorizontalAlignment="Left" Margin="406,85,0,0" VerticalAlignment="Top" Height="28" Width="51" FontSize="15" FontWeight="Bold"/>

    </Grid>
</Window>
